@model CarServiceManager.Web.ViewModels.Orders.OrderInListViewModel

@{
    ViewData["Title"] = "Изтриване на заявка";
}

<h4>Сигурни ли сте, че искате да изтриете заявката</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CarBrandName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CarBrandName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AddedByUserFullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AddedByUserFullName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтриване" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Назад към заявките</a>
    </form>
</div>