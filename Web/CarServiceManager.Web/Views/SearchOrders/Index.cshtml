@model CarServiceManager.Web.ViewModels.SearchOrders.SearchOrdersInputModel
@{
    ViewData["Title"] = "Справка";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Search" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KeyWord" class="control-label"></label>
                <input asp-for="KeyWord" class="form-control" />
                <span asp-validation-for="KeyWord" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <input type="submit" value="Търси" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
